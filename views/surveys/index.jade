extends ../layout

block content
  h1 설문조사
  
  table.table
    tr
      th 제목
      th 작성일
    each survey in surveys
      tr
        td
          a(href='/surveys/survey/#{survey.id}')= survey.title
        td= moment(survey.createdAt).format('YYYY/MM/DD')


  a.btn.btn-primary(href='/surveys/new/#{currentUser._id}') 설문작성
